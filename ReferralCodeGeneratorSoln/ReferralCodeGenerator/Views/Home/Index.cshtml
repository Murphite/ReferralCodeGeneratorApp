@{
    ViewBag.Title = "Referral Code Generator";
}

<style>
    body {
        background-color: #282c34;
    }
       

    h2 {
        font-size: 28px;
        margin-bottom: 50px;
        color: white;
        text-align: center;
    }

    label {
        color: black;
        display: block;
        margin-bottom: 10px;
    }
    
    .referral button {
        width: 100%;
        height: 100%;
        padding: 10px 10px;
        background: #EE161F;
        color: #fff;
        display: block;
        border: none;
        margin-top: 20px;
        position: absolute;
        left: 0;
        bottom: 0;
        max-height: 60px;
        border: 0px solid rgba(0, 0, 0, 0.1);
        border-radius: 0 0 2px 2px;
        transform: rotateZ(0deg);
        transition: all 0.1s ease-out;
        border-bottom-width: 7px;
    }

 
    .referral button .loading-text {
        display: none;
    }

    .referral button .spinner {
        display: none;
        width: 20px;
        height: 20px;
        border: 4px solid #fff;
        border-top-color: rgba(255, 255, 255, 0.3);
        border-radius: 100%;
        margin-right: 10px;
        animation: spinner 0.6s infinite linear;
    }

    .referral.loading button .spinner,
    .referral.loading button .loading-text {
        display: inline-block;
    }



    .referral.loading button .loading-text {
        vertical-align: middle;
    }


    p {
        color: white;
    }

    .error {
        color: red;
        margin-bottom: 10px;
    }

    .tooltip {
        position: relative;
        display: inline-block;
    }

    .tooltip .tooltiptext {
        visibility: hidden;
        width: 140px;
        background-color: #555;
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px;
        position: absolute;
        z-index: 1;
        bottom: 150%;
        left: 50%;
        margin-left: -75px;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .tooltip .tooltiptext::after {
        content: "";
        position: absolute;
        top: 100%;
        left: 50%;
        margin-left: -5px;
        border-width: 5px;
        border-style: solid;
        border-color: #555 transparent transparent transparent;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
        opacity: 1;
    }

</style>

<div class="wrapper">
    <div>
         <img src="~/assets/Zenith-Bank.png" />
    </div>
    <form class="referral" asp-controller="Home" asp-action="GenerateCode" method="post">
        <h2 class="title">Referral Code Generator</h2>
        <label for="email">Enter Your Email Address:</label>
        <input placeholder="Email Address" type="email" name="email" required />
        <button type="submit">
            <i class="spinner"></i> 
            <span class="loading-text">Loading</span>
            Generate Referral Code
        </button>  
        <p class="mt-3" style="color: red; text-align: center">@ViewBag.Error</p>
    </form>

    @if (ViewBag.ReferralCode != null)
    {
        <p class="mt-3">
            Your referral code: <strong id="referralCode">@ViewBag.ReferralCode</strong>
            <span class="ms-2" style="cursor:pointer;" id="copy"><i class="fa-regular fa-copy"></i></span>
        </p>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.querySelector('.referral');
        form.addEventListener('submit', (e) => {
            const button = form.querySelector('button');
            const spinner = button.querySelector('.spinner');
            button.classList.add('loading');
            
            button.classList.add('loading');
            spinner.style.display = 'inline-block';
        });

        const copyButton = document.querySelector("#copy");
        if (copyButton) {
            copyButton.addEventListener("click", () => {
                const referralCodeElement = document.querySelector("#referralCode");
                const referralCode = referralCodeElement.innerText;
                const tempInput = document.createElement("input");
                tempInput.value = referralCode;
                document.body.appendChild(tempInput);
                tempInput.select();
                document.execCommand("copy");
                document.body.removeChild(tempInput);
                alert("Referral code copied to clipboard: " + referralCode);
            });
        }
    });
</script>